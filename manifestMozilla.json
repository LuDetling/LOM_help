{
    "manifest_version": 3,
    "name": "LOM_Help",
    "description": "Base Level Extension",
    "version": "1.1",
    "browser_specific_settings": {
        "gecko": {
            "id": "LOM@extension.com",
            "strict_min_version": "42.0"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "images/*",
                "json/*"
            ],
            "matches": [
                "https://*/*"
            ]
        }
    ],
    "content_scripts": [
        {
            "css": [
                "style/style.css"
            ],
            "js": [
                "scripts/data.js",
                "scripts/content.js"
            ],
            "matches": [
                "https://lom.joynetgame.com/",
                "https://mushroom.joynetgame.com/*"
            ]
        }
    ]
}